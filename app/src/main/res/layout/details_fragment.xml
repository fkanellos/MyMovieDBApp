<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature_movieApp.presentation.DetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_8">

            <TextView
                android:textAlignment="center"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="testtttttttttttttttttttttttttttt"
                android:padding="@dimen/margin_8"

                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@mipmap/ic_launcher"
                android:layout_marginBottom="@dimen/margin_8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:textSize="@dimen/textSize_16"
                    android:textColor="@color/black"
                    tools:text="testttt"
                    app:drawableStartCompat="@drawable/ic_rating_star_black" />

                <Button
                    android:text="add"
                    android:id="@+id/favBtn"
                    android:layout_height="50dp"
                    android:layout_width="65dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:layout_marginEnd="@dimen/margin_8">
                </Button>

            </LinearLayout>


            <TextView
                android:id="@+id/text"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_8"
                android:textSize="@dimen/textSize_16"
                tools:text="testtttttttttttttttttttttttttttt"
                android:paddingStart="@dimen/margin_4"
                android:paddingEnd="@dimen/margin_4"/>

<!--            <include layout="@layout/youtube"-->
<!--                android:layout_height="300dp"-->
<!--                android:layout_width="match_parent"/>-->

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progress_bar"/>

</FrameLayout>